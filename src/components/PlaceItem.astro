---
interface PlaceItem {
  title: string;
  description: string;
  image: string;
}

interface Props {
  place: PlaceItem;
}

const { place } = Astro.props;
---
<div class="flex flex-col gap-3 pb-3">
  <div
    class="w-full bg-center bg-no-repeat aspect-video bg-cover rounded-lg"
    style={`background-image: url('${place.image}');`}
  ></div>
  <div>
    <p class="text-[#111518] text-base font-medium leading-normal">{place.title}</p>
    <p class="text-[#637888] text-sm font-normal leading-normal">{place.description}</p>
  </div>
</div> 