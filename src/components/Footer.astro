---
import TechStack from './TechStack';
---
<footer class="bg-gradient-to-r from-bg/50 to-secondary/30 border-t border-primary/20 backdrop-blur-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col items-center justify-center space-y-8">
      <TechStack client:load />
      
      <div class="text-center space-y-2">
        <p class="text-text/80 text-sm">
          Created by <span class="text-dark animate-pulse">Muhammad Mustaqeem</span>
        </p>
        <p class="text-text/60 text-xs">
          © {new Date().getFullYear()} • All rights reserved
        </p>
      </div>
    </div>
  </div>
</footer> 