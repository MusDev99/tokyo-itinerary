---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import TabsNew from '../components/TabsNew';
import PDFDownload from '../components/PDFDownload';
import itineraryData from '../data/itineraryData.json';

const today = new Date();
const firstDateStr = itineraryData[0].date;
const firstTimeStr = itineraryData[0].items[0].time;
const firstDay = new Date(`${firstDateStr} ${firstTimeStr}`);
const title = 'Tokyo 2025 Trip Itinerary'
const description = 'One week exploration to Tokyo Japan & Fuji in Autumm Season'

---
<Header firstDay={firstDay} />
<Layout title="Tokyo Trip Itinerary">
  <div class="relative flex size-full min-h-screen flex-col bg-transparent group/design-root overflow-x-hidden">
    <div class="layout-container flex h-full grow flex-col">
      <div class="px-3 sm:px-6 md:px-8 lg:px-12 xl:px-40 flex flex-1 justify-center py-3 sm:py-5">
        <div class="layout-content-container flex flex-col w-full max-w-[960px] flex-1">
          <div class="flex flex-col gap-3 sm:gap-6 p-2 sm:p-4">
            <div class="flex flex-col sm:flex-row sm:flex-wrap justify-between gap-2 sm:gap-3">
              <div class="flex flex-col gap-1.5 sm:gap-3">
                <h1 class="text-text tracking-light text-xl sm:text-2xl md:text-[32px] font-bold leading-tight">{title}</h1>
                <p class="text-text/80 text-xs sm:text-sm font-normal leading-normal">{description}</p>
              </div>
            </div>

            <div class="backdrop-blur-sm bg-bg/30 rounded-lg sm:rounded-2xl shadow-lg border border-primary/20">
              <PDFDownload itinerary={itineraryData} client:load />
              <TabsNew itinerary={itineraryData} client:load />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <Footer />
</Layout> 