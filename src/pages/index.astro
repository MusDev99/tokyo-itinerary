---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import TabsNew from '../components/TabsNew';
import PDFDownload from '../components/PDFDownload';
import itineraryData from '../data/itineraryData.json';

const today = new Date();
const firstDateStr = itineraryData[0].date;
const firstTimeStr = itineraryData[0].items[0].time;
const firstDay = new Date(`${firstDateStr} ${firstTimeStr}`);
const title = 'Tokyo 2025 Trip Itinerary'
const description = 'One week exploration to Tokyo Japan & Fuji in Autumm Season'

---
<Header firstDay={firstDay} />
<Layout title="Tokyo Trip Itinerary">
  <div class="relative flex size-full min-h-screen flex-col bg-transparent group/design-root overflow-x-hidden smooth-scroll">
    <div class="layout-container flex h-full grow flex-col">
      <div class="px-3 sm:px-6 md:px-8 lg:px-12 xl:px-40 flex flex-1 justify-center py-3 sm:py-5">
        <div class="layout-content-container flex flex-col w-full max-w-[960px] flex-1">
          <div class="flex flex-col gap-3 sm:gap-6 p-2 sm:p-4">
            {/* Enhanced Hero Section */}
            <div class="flex flex-col sm:flex-row sm:flex-wrap justify-between gap-2 sm:gap-3 mb-4">
              <div class="flex flex-col gap-1.5 sm:gap-3">
                <h1 class="text-text tracking-light text-xl sm:text-2xl md:text-[32px] font-bold leading-tight group-hover:gradient-text transition-all duration-500">
                  {title}
                </h1>
                <p class="text-text/80 text-xs sm:text-sm font-normal leading-normal max-w-2xl">
                  {description}
                </p>
                
                {/* Trip Stats */}
                <div class="flex flex-wrap gap-4 mt-3">
                  <div class="flex items-center gap-2 bg-gradient-to-r from-secondary/20 to-bg/20 px-3 py-2 rounded-lg border border-primary/20">
                    <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <span class="text-xs sm:text-sm text-text/80 font-medium">{itineraryData.length} Days</span>
                  </div>
                  
                  <div class="flex items-center gap-2 bg-gradient-to-r from-secondary/20 to-bg/20 px-3 py-2 rounded-lg border border-primary/20">
                    <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span class="text-xs sm:text-sm text-text/80 font-medium">Tokyo & Fuji</span>
                  </div>
                  
                  <div class="flex items-center gap-2 bg-gradient-to-r from-secondary/20 to-bg/20 px-3 py-2 rounded-lg border border-primary/20">
                    <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-xs sm:text-sm text-text/80 font-medium">Autumn Season</span>
                  </div>
                </div>
              </div>
            </div>

            {/* Enhanced Main Content */}
            <div class="glass-effect rounded-lg sm:rounded-2xl shadow-xl border border-primary/20 overflow-hidden">
              <PDFDownload itinerary={itineraryData} client:load />
              <TabsNew itinerary={itineraryData} client:load />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <Footer />
</Layout> 