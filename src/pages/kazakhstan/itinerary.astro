---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import TabsNew from '../../components/TabsNew.tsx';
import PDFDownload from '../../components/PDFDownload.tsx';
import AnalyticsDashboard from '../../components/AnalyticsDashboard.tsx';
import Banner from '../../components/Banner.tsx';
import itineraryData from '../../data/kazakhstan/itinerary.json';

const itineraryDays  = itineraryData;

const firstDateStr = itineraryDays.length > 0 ? itineraryDays[0].date : null;

const title = 'Kazakhstan 2026 Trip Itinerary'
const description = '5-day exploration of Almaty and its surroundings.'
---

<Layout title="Kazakhstan Trip Itinerary">
  <Header />
  <Banner targetDate={firstDateStr} client:load />
  <div class="relative flex size-full min-h-screen flex-col bg-transparent group/design-root overflow-x-hidden smooth-scroll">
    <div class="layout-container flex h-full grow flex-col">
      <div class="px-3 sm:px-6 md:px-8 lg:px-12 xl:px-40 flex flex-1 justify-center py-3 sm:py-5">
        <div class="layout-content-container flex flex-col w-full max-w-[960px] flex-1">
          <div class="flex flex-col gap-3 sm:gap-6 p-2 sm:p-4">
            <div class="flex flex-col sm:flex-row sm:flex-wrap justify-between gap-2 sm:gap-3 mb-4">
              <div class="flex flex-col gap-1.5 sm:gap-3">
                <h1 class="text-text tracking-light text-xl sm:text-2xl md:text-[32px] font-bold leading-tight group-hover:gradient-text transition-all duration-500">
                  {title}
                </h1>
                <p class="text-text/80 text-xs sm:text-sm font-normal leading-normal max-w-2xl">
                  {description}
                </p>
              </div>
            </div>
            <div class="glass-effect rounded-lg sm:rounded-2xl shadow-xl border border-primary/20 overflow-hidden mb-6">
              <div class="p-4 sm:p-6">
                <AnalyticsDashboard dataSources={{ kazakhstan: itineraryDays }} client:load />
              </div>
            </div>
            <div class="glass-effect rounded-lg sm:rounded-2xl shadow-xl border border-primary/20 overflow-hidden">
              <PDFDownload itinerary={itineraryDays} client:load />
              <TabsNew itinerary={itineraryDays} client:load />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <Footer />
</Layout>
